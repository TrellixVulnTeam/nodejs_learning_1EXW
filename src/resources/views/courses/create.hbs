<h1 class="mt-4 mb-4" style="font-size: 40px;">CREATE COURSE</h1>

<form method="POST" action="/courses/store">
  <div class="form-group">
    <label for="course_name">Tên khóa học</label>
    <input type="text" name='name' class="form-control" id="course_name" placeholder="Nhập tên khóa học...">
  </div>
  <div class="form-group">
    <label for="course_description">Mô tả</label>
    <input type="text" name='description' class="form-control" id="course_description" placeholder="Nhập vào mô tả khóa học...">
  </div>
  <div class="form-group">
    <label for="course_video-id">Video ID</label>
    <input type="text" name='videoId' class="form-control" id="course_video-id" placeholder="video id">
  </div>

  <button type="text" class="btn btn-primary">Tạo</button>
</form>